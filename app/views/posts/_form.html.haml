.modal{id: 'modal-post', role: 'dialog', tabindex: '-1'}
  .modal-dialog{role: 'document'}
    .modal-content
      .modal-header
        %h5.modal-title Post
        %button.close{'aria-label' => 'Close', 'data-dismiss' => 'modal', type: 'button'}
          %span{'aria-hidden' => 'true'} Ã—
      = form_for @post, remote: true do |form|
        .modal-body
          .form-group
            = form.label :title
            %br
            = form.text_field :title
          .form-group
            = form.label :body
            %br
            = form.text_area :body
        .modal-footer
          = form.button 'Add post', type: :submit, class: 'btn btn-success'

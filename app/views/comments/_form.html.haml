.modal{id: 'modal-comment', role: 'dialog', tabindex: '-1'}
  .modal-dialog{role: 'document'}
    .modal-content
      .modal-header
        %h5.modal-title comment
        %button.close{'aria-label' => 'Close', 'data-dismiss' => 'modal', type: 'button'}
          %span{'aria-hidden' => 'true'} Ã—
      = form_for([@post, @post.comments.build], remote: true) do |form|
        .modal-body
          .form-group
            = form.label :body
            %br
            = form.text_area :body
        .modal-footer
          = form.button 'Add comment', type: :submit, class: 'btn btn-success'
